<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="车牌号"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/grey_3" />
    <EditText
        android:id="@+id/et_filter_vehicle_mark"
        android:background="@drawable/login_input_bg"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_5"
        android:hint="车牌号"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey_9"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="申请时间"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/grey_3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_filter_start_date"
            android:background="@drawable/login_input_bg"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_5"
            android:hint="起始日期"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/grey_9"/>
        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_0_5"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/line_c9c9c9" />
        <TextView
            android:id="@+id/tv_filter_end_date"
            android:background="@drawable/login_input_bg"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_5"
            android:hint="结束日期"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/grey_9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
        <Button
            android:id="@+id/btn_filter_reset"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_38"
            android:background="@drawable/btn_frame_green"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:text="重 置"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_14"/>
        <Button
            android:id="@+id/btn_filter_sure"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/btn_frame_filling_green"
            android:text="确 定"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>
</LinearLayout>