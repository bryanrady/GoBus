<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_common_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:text="提 示"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/grey_6"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/line_eaeaea" />
    <TextView
        android:id="@+id/tv_common_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="签到成功，获得200积分"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/grey_9"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/line_eaeaea" />
    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_common_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_38"
            android:background="@drawable/btn_frame_green"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:text="取 消"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_14"/>
        <Button
            android:id="@+id/btn_common_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_38"
            android:layout_weight="1"
            android:background="@drawable/btn_frame_filling_green"
            android:text="确 定"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

</LinearLayout>