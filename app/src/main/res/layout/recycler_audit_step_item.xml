<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_audit_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">
        <RelativeLayout
            android:id="@+id/rl_audit_step_head"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60">
            <com.hxd.gobus.views.CircleImageView
                android:id="@+id/iv_audit_step_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_my_default_head"/>
            <ImageView
                android:id="@+id/iv_audit_status_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/ic_approval_item_in_progress"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/rl_audit_step_head"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_audit_step_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张某某"
                android:textStyle="bold"
                android:textColor="@color/grey_6"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_audit_step_status"
                android:layout_below="@+id/tv_audit_step_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="审核通过"
                android:textStyle="bold"
                android:textColor="@color/grey_9"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_audit_step_time"
            android:visibility="gone"
            android:text="2019/03/24 09:11:09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/grey_9"
            android:textSize="@dimen/sp_10" />
        <TextView
            android:id="@+id/tv_audit_step_reminder"
            android:visibility="gone"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_23"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/btn_frame_filling_green"
            android:text="催 办"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>
    <View
        android:id="@+id/audit_step_vertical_line"
        android:layout_below="@+id/rl_audit_step"
        android:layout_width="@dimen/dp_2"
        android:layout_height="@dimen/dp_19"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@color/line_eaeaea" />
</RelativeLayout>
