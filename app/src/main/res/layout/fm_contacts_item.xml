<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_contacts_item_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:textSize="@dimen/sp_12"
        android:gravity="center_vertical"
        android:textColor="@color/grey_3"
        android:text="A"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/layout_click_item_selector">
        <com.hxd.gobus.views.CircleImageView
            android:id="@+id/iv_my_head"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15" />
        <LinearLayout
            android:layout_toRightOf="@+id/iv_my_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_contacts_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_6"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/tv_contacts_item_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_9"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_5" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
