<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp" >

    <ImageView
        android:id="@+id/update_apk_notification_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/update_apk_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/update_apk_notification_icon"
        android:text="拼命下载中..."
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/update_apk_notification_over"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/update_apk_notification_icon"
        android:gravity="center_vertical"
        android:text="下载完成"
        android:textSize="18sp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/update_apk_notification_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/update_apk_notification_title"
        android:layout_toRightOf="@id/update_apk_notification_icon" />

</RelativeLayout>