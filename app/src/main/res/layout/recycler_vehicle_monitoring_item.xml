<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@drawable/layout_click_item_selector">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tv_vehicle_monitoring_item_location"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_vehicle_monitoring_item_license"
            android:layout_width="@dimen/dp_75"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_14"/>
        <TextView
            android:id="@+id/tv_vehicle_monitoring_item_name"
            android:layout_toRightOf="@+id/tv_vehicle_monitoring_item_license"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_6"
            android:textSize="@dimen/sp_14"/>
        <TextView
            android:id="@+id/tv_vehicle_monitoring_item_time"
            android:layout_toRightOf="@+id/tv_vehicle_monitoring_item_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_6"
            android:textSize="@dimen/sp_14"/>
        <TextView
            android:id="@+id/tv_vehicle_monitoring_item_company_name"
            android:layout_below="@+id/tv_vehicle_monitoring_item_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/grey_6"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_vehicle_monitoring_item_location"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_23"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/btn_frame_green"
        android:text="位 置"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>
