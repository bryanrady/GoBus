<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/toolbar_layout"/>

    <!--ScrollView嵌套RecyclerView https://blog.csdn.net/a_kevin/article/details/86629758 -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_above="@+id/ll_repair_approval_audit"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">
                    <com.hxd.gobus.views.CircleImageView
                        android:id="@+id/civ_approval_apply_person_head"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_my_default_head"/>
                    <LinearLayout
                        android:layout_toRightOf="@+id/civ_approval_apply_person_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_approval_apply_person_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/grey_6"
                            android:textSize="@dimen/sp_14"/>
                        <TextView
                            android:id="@+id/tv_approval_data_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textStyle="bold"
                            android:textColor="@color/grey_9"
                            android:textSize="@dimen/sp_12"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_approval_data_color_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:textStyle="bold" />
                </RelativeLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/line_eaeaea" />

                <!-- 审核内字段 start -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/repair_approval_detail_record_number"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_record_number"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/repair_approval_detail_apply_time"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_apply_time"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/repair_approval_detail_vehicle_name"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_vehicle_name"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/repair_approval_detail_vehicle_license"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_vehicle_license"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/repair_approval_detail_estimated_cost"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_estimated_cost"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="维修状态"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_repair_status"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/repair_approval_detail_situation_description"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_situation_description"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/repair_approval_detail_handle_person"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_handle_person"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="本次实际费用(元)"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_actual_cost"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="维修时间"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_repair_time"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/repair_approval_detail_cost_bearing"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_cost_bearing"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/repair_approval_detail_remark"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <TextView
                        android:id="@+id/tv_repair_approval_detail_remark"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/grey_6"
                        android:textSize="@dimen/sp_14"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15">
                    <TextView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="附件管理"
                        android:textStyle="bold"
                        android:textColor="@color/grey_9"
                        android:textSize="@dimen/sp_14"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/attach_recyclerView"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!-- 审核内字段 end -->
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/approval_recyclerview"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_repair_approval_audit"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@color/white">
        <Button
            android:id="@+id/btn_repair_approval_disagree"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_38"
            android:background="@drawable/btn_frame_green"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:text="退 回"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_14"/>
        <Button
            android:id="@+id/btn_repair_approval_agree"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/btn_frame_filling_green"
            android:text="同 意"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

</RelativeLayout>
