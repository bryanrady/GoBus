<?xml version="1.0" encoding="utf-8"?>
<com.hxd.gobus.views.swipe_load.TwitterRefreshHeaderView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/refresh_header_height_twitter"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_45"
            android:layout_toLeftOf="@+id/tvRefresh"
            app:srcCompat="@drawable/gank_icon_pull_arrow_white" />

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_48"
            android:layout_toLeftOf="@+id/tvRefresh"
            app:srcCompat="@drawable/gank_icon_pull_refresh_success_white" />

        <com.hxd.gobus.views.swipe_load.ProgressWheel
            android:id="@+id/progressbar"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_44"
            android:layout_toLeftOf="@+id/tvRefresh"
            app:matProg_barColor="@color/white"
            app:matProg_barWidth="@dimen/dp_2"
            app:matProg_progressIndeterminate="true" />

        <TextView
            android:id="@+id/tvRefresh"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white" />
    </RelativeLayout>

</com.hxd.gobus.views.swipe_load.TwitterRefreshHeaderView>