<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:id="@+id/rl_my_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/layout_click_item_selector">
        <com.hxd.gobus.views.CircleImageView
            android:id="@+id/iv_my_head"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_my_default_head" />
        <LinearLayout
            android:layout_toRightOf="@+id/iv_my_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_my_name"
                android:text="欧阳某某"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/grey_3"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/tv_my_unit"
                android:text="公司领导"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_my_name"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_toRightOf="@+id/iv_my_head"
                android:textColor="@color/grey_9"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/right_expand_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_my_vehicle"
        android:layout_width="match_parent"
        android:background="@drawable/layout_click_item_selector"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/iv_my_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/ic_my_vehicle_record" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_my_vehicle"
            android:text="用车记录"
            android:textStyle="bold"
            android:textColor="@color/grey_6"
            android:textSize="@dimen/sp_14" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/right_expand_selector" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/line_eaeaea" />
    <RelativeLayout
        android:id="@+id/rl_my_repair"
        android:layout_width="match_parent"
        android:background="@drawable/layout_click_item_selector"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/iv_my_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/ic_my_repair_record" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_my_repair"
            android:text="维修记录"
            android:textStyle="bold"
            android:textColor="@color/grey_6"
            android:textSize="@dimen/sp_14" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/right_expand_selector" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/line_eaeaea" />
    <RelativeLayout
        android:id="@+id/rl_my_maintenance"
        android:layout_width="match_parent"
        android:background="@drawable/layout_click_item_selector"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/iv_my_maintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/ic_my_maintain_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_my_maintenance"
            android:text="保养记录"
            android:textStyle="bold"
            android:textColor="@color/grey_6"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/right_expand_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_my_use_help"
        android:layout_width="match_parent"
        android:background="@drawable/layout_click_item_selector"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/iv_my_use_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/ic_my_use_help" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_my_use_help"
            android:text="使用帮助"
            android:textStyle="bold"
            android:textColor="@color/grey_6"
            android:textSize="@dimen/sp_14" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/right_expand_selector" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/line_eaeaea" />
    <RelativeLayout
        android:id="@+id/rl_my_setting"
        android:layout_width="match_parent"
        android:background="@drawable/layout_click_item_selector"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/iv_my_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/ic_my_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_my_setting"
            android:text="设置"
            android:textStyle="bold"
            android:textColor="@color/grey_6"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/right_expand_selector" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_my_connect_admin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/btn_frame_filling_green"
        android:text="联系管理员"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

</LinearLayout>
